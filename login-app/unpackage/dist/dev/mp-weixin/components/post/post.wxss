.post {
  display: flex;
  flex-direction: column;
  background-color: white;
  border-radius: 10rpx;
  margin: 10rpx 20rpx;
  padding: 20rpx;
}
.post .user-info {
  display: flex;
  align-items: center;
}
.post .user-info .avatar {
  background-color: wheat;
  margin-right: 10rpx;
}
.post .user-info .middle-content {
  flex: 1;
  text-align: start;
}
.post .user-info .middle-content .name {
  font-weight: bold;
}
.post .user-info .middle-content .time {
  font-size: 28rpx;
  color: #999;
}
.post .user-info .follow-btn {
  background-color: #82aae3;
  color: white;
  line-height: 56rpx;
  width: 128rpx;
}
.post .post-content {
  margin-top: 10rpx;
  text-align: start;
}
.post .post-content .post-text {
  margin-bottom: 6rpx;
  font-size: 32rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.post .post-content .post-img {
  border-radius: 8rpx;
  width: 100%;
}
.post .bottom {
  margin-top: 10rpx;
  line-height: 60rpx;
  display: flex;
  justify-content: space-between;
}