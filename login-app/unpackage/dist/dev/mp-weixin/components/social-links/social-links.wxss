.social-box {
  padding: 40rpx 10rpx;
  display: flex;
  flex-direction: column;
}
.social-box .social-title {
  display: flex;
  justify-content: center;
  align-items: center;
  color: gray;
}
.social-box .social-title .row-sep {
  width: 120rpx;
  height: 2rpx;
  margin: auto 30rpx;
  background-color: lightgray;
}
.social-box .icon-box {
  padding: 20rpx 60rpx;
  margin: 20rpx 0;
}
.social-box .icon-box .t-icon {
  width: 100rpx;
  height: 100rpx;
  margin-right: 10rpx;
}
.social-box .agreements {
  text-align: center;
  color: gray;
}
.social-box .agreements .link {
  color: #2e8ad7;
}