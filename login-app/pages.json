{
  "easycom": {
    "^u-(.*)": "@/uni_modules/vk-uview-ui/components/u-$1/u-$1.vue"
  },
  "pages": [{
      "path": "pages/home/home",
      "style": {
        "navigationBarTitleText": "首页",
        "app-plus": {
          "titleNView": {
            "buttons": [{
              "fontSrc": "/static/iconfont.ttf",
              "text": "\ue73f",
              "width": "40px",
              "fontSize": "34px",
              "color": "#fff",
              "background": "rgba(0,0,0,0)"
            }],
            "searchInput": {
              "backgroundColor": "#fff",
              "borderRadius": "6px",
              "placeholder": "搜索帖子",
              "disabled": true
            }
          }
        }
      }
    },
    // 搜索详情
    {
      "path": "pages/home/search-detail/search-detail",
      "navigationBarTextStyle": "black",
      "style": {
        "app-plus": {
          "titleNView": {
            "backgroundColor": "#fff",
            "buttons": [{
              "text": "搜索",
              "fontSize": "18px",
              "width": "60px",
              "color": "#000"
            }],
            "searchInput": {
              "backgroundColor": "#eee",
              "placeholderColor": "#434242",
              "borderRadius": "6px",
              "placeholder": "搜索帖子 ",
              "autoFocus": true
              // "disabled": true
            },
            "autoBackButton": true,
            "backButton": {
              "fontWeight": "bold"
            }
          }
        }
      }
    },
    // 新增帖子页面
    {
      "path": "pages/createPost/createPost",
      "navigationBarTextStyle": "black", // 导航字体颜色
      "style": {
        "navigationBarTitleText": "所有人可见",
        "enablePullDownRefresh": false,
        "app-plus": {
          "titleNView": {

            "backgroundColor": "#fff", //背景色
            "autoBackButton": true,
            "buttons": [{
                "text": "", // 占位
                "fontSize": "14",
                "width": "110px"
              },
              {
                "fontSize": "24px",
                "width": "auto",
                "fontSrc": "/static/iconfont.ttf",
                "text": "\ue6f0"
              }
            ]
          }
        }
      }
    },
    {
      "path": "pages/story/story",
      "style": {
        "navigationBarTitleText": "好友动态",
        "enablePullDownRefresh": true,
        "app-plus": {
          "titleNView": {
            "autoBackButton": true,
            "buttons": [{
              "fontSrc": "/static/iconfont.ttf",
              "text": "\ue73f",
              "width": "40px",
              "fontSize": "34px",
              "color": "#fff",
              "background": "rgba(0,0,0,0)"
            }]
          }
        }
      }
    },
    {
      "path": "pages/message/message",
      "style": {
        "navigationBarTitleText": "消息"
      }
    },
    {
      "path": "pages/profile/profile",
      "style": {
        "navigationBarTitleText": "我的",
        "navigationBarBackgroundColor": "#000"
      }
    },
    {
      "path": "pages/login/login-pwd",
      "style": {
        "navigationBarTitleText": "密码"
      }
    },
    {
      "path": "pages/login/login-sms",
      "style": {
        "navigationBarTitleText": "验证码"
      }
    },
    {
      "path": "pages/postDetail/postDetail",
      "style": {
        "navigationBarTitleText": "帖子详情",
        "enablePullDownRefresh": false
      }
    }
  ],

  "tabBar": {
    "color": "#7A7E83",
    "selectedColor": "#82AAE3",
    "borderStyle": "black",
    "backgroundColor": "#fff",
    "list": [{
        "pagePath": "pages/home/home",
        "iconPath": "static/icons/home.png",
        "selectedIconPath": "static/icons/home_ac.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/story/story",
        "iconPath": "static/icons/star.png",
        "selectedIconPath": "static/icons/star_ac.png",
        "text": "动态"
      },
      {
        "pagePath": "pages/message/message",
        "iconPath": "static/icons/message.png",
        "selectedIconPath": "static/icons/message_ac.png",
        "text": "消息"
      },
      {
        "pagePath": "pages/profile/profile",
        "iconPath": "static/icons/me.png",
        "selectedIconPath": "static/icons/me_ac.png",
        "text": "我的"
      }
    ]
  },
  "globalStyle": {
    "homeButton": true,
    "navigationBarBackgroundColor": "#93c0ff",
    "navigationBarTextStyle": "black"
  },
  "uniIdRouter": {}
}
